{
	"name": "anaplan-extension-george-duckett",
	"private": true,
	"version": "1.0.0",
	"author": "George Duckett <georgeduckett@gmail.com>",
	"license": "UNLICENSED",
	"scripts": {
		"antlr": "antlr4ts -visitor -o src/Anaplan/antlrclasses src/Anaplan/AnaplanFormula.g4",
		"dev": "webpack --watch --mode development --env=use-cdn-for-monaco=true",
		"dev-without-cdn": "webpack --watch --mode development",
		"build": "npm install && yarn antlr && yarn build-js && yarn bundle && yarn extract",
		"build-dev": "npm install && yarn antlr && yarn build-jsdev && yarn jest && yarn bundle && yarn extract",
		"build-js": "webpack --mode production",
		"build-jsdev": "webpack --mode development",
		"bundle": "yarn shx rm -rf ./dist/extension.zip && yarn jszip-cli add -o ./dist/extension.zip dist manifest.json logo.drawio.png",
		"extract": "yarn shx rm -rf ./dist/extension && yarn jszip-cli extract -o ./dist/extension ./dist/extension.zip",
		"test": "npm install && jest"
	},
	"devDependencies": {
		"@ffflorian/jszip-cli": "^3.1.6",
		"@types/chrome": "^0.0.133",
		"@types/html-webpack-plugin": "^3.2.2",
		"@types/jest": "^25.1.4",
		"@types/mini-css-extract-plugin": "^1.2.2",
		"@types/webpack": "^4.41.6",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"assert": "^2.0.0",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^5.1.3",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^6.2.0",
		"html-webpack-plugin": "^5.3.1",
		"mini-css-extract-plugin": "^1.3.3",
		"monaco-editor-webpack-plugin": "^3.0.1",
		"prettier": "^2.2.1",
		"process": "^0.11.10",
		"raw-loader": "^4.0.0",
		"sass": "^1.25.0",
		"sass-loader": "^11.0.1",
		"shx": "^0.3.2",
		"style-loader": "^2.0.0",
		"jest": "^27.3.1",
		"ts-jest": "^27.0.7",
		"ts-loader": "^9.2.6",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"util": "^0.12.3",
		"webpack": "^5.27.0",
		"webpack-cli": "^4.5.0"
	},
	"dependencies": {
		"@types/copy-webpack-plugin": "^6.4.0",
