{
	"manifest_version": 3,
	"name": "Better Formula Editor for Anaplan",
	"version": "0.5.1",
	"description": "WIP. This extension enhances Anaplan in several ways; using the Monaco editor and validity checks for formulas.",
	"icons": {
		"128": "logo.drawio.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.app.anaplan.com/*"
			],
			"js": [
				"/dist/content-script.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	],
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"https://*.app.anaplan.com/*/anaplan/*",
		"https://*.app.anaplan.com/a/modeling/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"dist/*"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}